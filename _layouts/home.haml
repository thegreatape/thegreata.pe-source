%html
  {% haml header.haml %}
  %body.home
    {% haml nav.haml %}
    %section.section
      .container.articles
        {% for post in site.posts %}
        {% unless post.next %}
        %h2.title.is-3.year {{ post.date | date: '%Y' }}
        {% else %}
        {% capture year %}{{ post.date | date: '%Y' }}{% endcapture %}
        {% capture nyear %}{{ post.next.date | date: '%Y' }}{% endcapture %}
        {% if year != nyear %}
        %h2.title.is-3.year {{ post.date | date: '%Y' }}
        {% endif %}
        {% endunless %}
        %span.is-size-5.post-date {{ post.date | date: '%b %d' }}
        %a.article.is-size-5.article-title{href: "{{ site.url }}{{ post.url }}", title: "{{ post.title }}"} {{ post.title }}
        {% endfor %}
  {% include goatcounter.html %}
