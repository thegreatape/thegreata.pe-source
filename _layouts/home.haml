%html
  {% haml header.haml %}
  %body
    {% haml nav.haml %}
    %section.section
      .container
        {% for post in site.posts %}
        {% unless post.next %}
        %h2.title.is-2 {{ post.date | date: '%Y' }}
        {% else %}
        {% capture year %}{{ post.date | date: '%Y' }}{% endcapture %}
        {% capture nyear %}{{ post.next.date | date: '%Y' }}{% endcapture %}
        {% if year != nyear %}
        %h2.title.is-2 {{ post.date | date: '%Y' }}
        {% endif %}
        {% endunless %}
        %article{:itemprop => "blogPost", :itemscope => "", :itemtype => "http://schema.org/BlogPosting"}
          %h2{:itemprop => "headline"}
            %span.post-date {{ post.date | date: '%b %d' }}
            %a{:href => "{{ site.url }}{{ post.url }}", :rel => "bookmark", :title => "{{ post.title }}"} {{ post.title }}
        {% endfor %}
